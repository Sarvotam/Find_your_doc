<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Wait time rating</th>
      <th>Bedside manner rating</th>
      <th>Overall rating</th>
      <th>Review</th>
      <th>Is recommended</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.wait_time_rating %></td>
        <td><%= review.bedside_manner_rating %></td>
        <td><%= review.overall_rating %></td>
        <td><%= review.review %></td>
        <td><%= review.is_recommended %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
