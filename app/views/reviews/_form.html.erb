<%= form_for(review) do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    
    <%= f.hidden_field :doctor_id,:value => params[:id]%>
  </div>
  <div id="rating-form1">
    <label>Wait time rating</label>
  </div>

  <div id="rating-form2">
    <label>bedside manner rating</label>
  </div>

  <div id="rating-form3">
    <label>overall rating</label>
  </div>

  <div class="field">
    <%= f.label :review %>
    <%= f.text_area :review %>
  </div>

  <div class="field">
    <%= f.label :is_recommended %>
    <%= f.check_box :is_recommended %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
