<%= form_for review, remote: true  do |f| %>

    <div class="field">
        <%= f.hidden_field :doctor_id, :value => params[:id]%>
      </div>
      <div id="rating-form1">
        <label>Wait time rating</label>
      </div>

      <div id="rating-form2">
        <label>bedside manner rating</label>
      </div>

      <div id="rating-form3">
        <label>overall rating</label>
      </div>

      <div class="field">
        <%= f.label :review %>
        <%= f.text_area :review %>
      </div>

      <div class="field">
        <%= f.label :is_recommended %>
        <%= f.check_box :is_recommended %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>
          <script type="text/javascript">
          $('#rating-form1',).raty({
            path: '/assets/',
            scoreName: 'review[wait_time_rating]'
          });
        </script>

         <script type="text/javascript">
          $('#rating-form2').raty({
            path: '/assets/',
            scoreName: 'review[bedside_manner_rating]'
          });
        </script>

        <script type="text/javascript">
          $('#rating-form3').raty({
            path: '/assets/',
            scoreName: 'review[overall_rating]'
          });
        </script>

        
        <script type="text/javascript">
        $('.review-rating').raty({ 
          readOnly: true,
          score: function() {
            return $(this).attr('data-score');
          },
          path: '/assets/'
        });

        $('.average-review-rating').raty({
          readOnly: true,
          path: '/assets/',
          score: function() {
            return $(this).attr('data-score')
          }
        });
        </script>